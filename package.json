{
  "name": "pong-keeper",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "webpack serve --config build-utils/webpack.config.js --env env=dev",
    "build": "webpack --config build-utils/webpack.config.js --env env=prod",
    "build:analyze": "yarn run build -- --env addon=bundleanalyze",
    "lint": "yarn run lint:js && yarn run lint:css",
    "lint:css": "stylelint app/**/*.js",
    "lint:eslint": "eslint --ignore-path .eslintignore --ignore-pattern internals/scripts",
    "lint:eslint:fix": "eslint --ignore-path .eslintignore --ignore-pattern internals/scripts --fix",
    "lint:js": "yarn run lint:eslint -- . ",
    "lint:staged": "lint-staged",
    "test:clean": "rimraf ./coverage",
    "test": "cross-env NODE_ENV=test jest --coverage",
    "test:staged": "jest --findRelatedTests",
    "test:watch": "cross-env NODE_ENV=test jest --watchAll",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [],
  "author": "Tapan Awasthi (https://www.tapanawasthi.dev)",
  "license": "MIT",
  "lint-staged": {
    "*.js": [
      "yarn run lint:eslint:fix",
      "git add --force"
    ],
    "*.json": [
      "prettier --write",
      "git add --force",
      "jest --findRelatedTests $STAGED_FILES"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "dotenv-webpack": "^5.0.0",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "17.1.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-config-prettier": "6.4.0",
    "eslint-config-prettier-standard": "^3.0.1",
    "eslint-config-standard": "14.1.0",
    "eslint-import-resolver-webpack": "0.11.1",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-jsx-a11y": "6.2.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "eslint-plugin-react-native": "3.7.0",
    "eslint-plugin-redux-saga": "1.1.3",
    "eslint-plugin-standard": "4.0.1",
    "html-webpack-plugin": "^4.5.0",
    "jest-cli": "^26.6.3",
    "jest-dom": "^4.0.0",
    "jest-styled-components": "^7.0.3",
    "prettier": "^2.1.2",
    "prettier-config-standard": "1.0.1",
    "prettier-standard": "15.0.1",
    "react-hot-loader": "^4.13.0",
    "react-test-renderer": "^17.0.1",
    "react-testing-library": "^8.0.1",
    "webpack": "^5.3.2",
    "webpack-bundle-analyzer": "^3.9.0",
    "webpack-cli": "^4.1.0",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^5.3.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.12.1",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.3",
    "connected-react-router": "^6.8.0",
    "cross-env": "^7.0.3",
    "husky": "^4.3.8",
    "immutable": "^4.0.0-rc.12",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-redux": "^7.2.2",
    "react-router-dom": "^5.2.0",
    "redux": "^4.0.5",
    "redux-persist": "^6.0.0",
    "redux-persist-transform-immutable": "^5.0.0",
    "redux-saga": "^1.1.3",
    "reselect": "^4.0.0",
    "styled-components": "^5.2.1",
    "stylelint": "^13.8.0"
  }
}
